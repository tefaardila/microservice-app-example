        stage('Artifact') { 
            steps {
                archiveArtifacts artifacts: '**'
            }
        }
        stage('Create tar.gz file'){
            steps{
                sh 'tar -cvzf pipeline-2.tar.gz /var/lib/jenkins/workspace/pipeline-2'
            }
            
        }
        // stage('Upload-Artifact-Nexus'){
        //     steps {
